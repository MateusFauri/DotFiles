# Variables

# Display
output eDP-1 pos 0 0 resolution 1366x768@60.003Hz
output HDMI-A-1 pos 1366 0 resolution 2560x1080@74.991Hz

# Modifier
set $mod Mod4

# Terminal emulator
set $term env KITTY_ENABLE_WAYLAND=1 kitty

# Colors
set $bg_color_dark #101010E6
set $bg_color_unfocus #303030E6
set $indicator_color #E95420E6
set $border_color #A0A0A0E6
set $border_color_transparent #00000000
set $text_color_light #E0E0E0FF
set $text_color_dark #808080FF

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1  "1"
set $ws2  "2"
set $ws3  "3"
set $ws4  "4"
set $ws5  "5"
set $ws6  "6"
set $ws7  "7"
set $ws8  "8"
set $ws9  "9"
set $ws10 "10"

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:JetBrainsMono Nerd Font 10

# Window Settings
set $cl_high #33ccff
set $cl_back #595959
set $cl_urge #00ff99

# titlebar_padding 16 6
title_align center
smart_borders on
default_border pixel 1
default_floating_border pixel 1
gaps outer 2
gaps inner 5
## Window decoration
# class                 border  backgr. text    indicator child_border
client.focused          #33ccff #595959 #eceff4 #33ccff   #33ccff
client.focused_inactive #33ccff #595959 #d8dee9 #000000   #000000
client.unfocused        #33ccff #595959 #d8dee9 #000000   #000000
client.urgent           #33ccff #595959 #2e3440 #8fbcbb   #ebcb8b

# Opacity
# set $opacity 0.9
set $opacity 1
for_window [class=".*"] opacity $opacity
for_window [app_id=".*"] opacity $opacity

# Bar
bar {
    swaybar_command waybar
}

# Wallpaper
output "*" bg ~/.config/sway/wallpaper.png fill

# Mouse
input type:touchpad {
    tap enabled
    natural_scroll enabled
    scroll_factor 0.8
}


# Keymap
input * {
    xkb_layout "br"
    xkb_variant ""
    xkb_options "grp:alt_caps_toggle"
}
input <identifier> xkb_model "pc105"


# Apply gtk theming
exec_always ~/.config/sway/scripts/import-gsettings

exec_always {
    gsettings set org.gnome.desktop.interface gtk-theme "Otto"
    gsettings set org.gnome.desktop.interface icon-theme "McMojave-circle-grey-dark"
    gsettings set org.gnome.desktop.interface cursor-theme "material_dark_cursors"
    gsettings set org.gnome.desktop.interface font-name "JetBrainsMono Nerd Font 10"
    gsettings set org.gnome.desktop.interface monospace-font-name "JetBrainsMono Nerd Font 10"

    gsettings set org.gnome.desktop.input-sources show-all-sources true
    gsettings set org.gnome.desktop.interface color-scheme prefer-dark
    # kvantummanager --set "$kvantum-theme"
}

# Autostart apps
exec autotiling 
exec lxpolkit
exec --no-startup-id 'nm-applet -i'
# exec --no-startup-id dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway
exec --no-startup-id mako
exec --no-startup-id XDG_CURRENT_DESKTOP=Unity  nm-applet --indicator
exec --no-startup-id XDG_CURRENT_DESKTOP=Unity blueman-applet
exec swayidle -w \
    timeout 900 'gtklock' \
    timeout 60 'pgrep -x gtklock && swaymsg "output * dpms off"' \
    resume 'swaymsg "output * dpms on"' \
    timeout 7200 'systemctl suspend' \
    resume 'swaymsg "output * dpms on"' \
    before-sleep 'playerctl pause' \
    before-sleep 'gtklock'
# exec --no-startup-id eww daemon
# exec --no-startup-id XDG_CURRENT_DESKTOP=Unity pasystray

include /etc/sway/config.d/*
input type:touchpad {
    tap enabled
    natural_scroll enable
}

input * {
    left_handed disabled
    tap enabled
    natural_scroll disabled
    dwt enabled
    accel_profile "flat" # disable mouse acceleration (enabled by default; to set it manually, use "adaptive" instead of "flat")
    pointer_accel 1 # set mouse sensitivity (between -1 and 1)
}



# Keybindings

# General
# bindsym $mod+shift+x exec gtklock
bindsym $mod+shift+m exec 'bash ~/.config/rofi/leave/leave.sh'
bindsym $mod+shift+l exec swaylock
bindsym $mod+c kill
bindsym $mod+s exec grim -g "$(slurp)" ~/Pictures/Screenshots/"screenshot-`date +%F-%T`".png
bindsym $mod+d exec thunar
bindsym $mod+q exec $term
bindsym $mod+f exec firefox
bindsym $mod+Space exec '! pgrep -x wofi && wofi'
# Commonly used apps
bindsym $mod+Shift+h split h
bindsym $mod+Shift+v split v
bindsym $mod+shift+f fullscreen toggle
bindsym $mod+t layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+v floating toggle
bindsym $mod+a focus parent
bindsym $mod+Shift+a focus child
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+r mode "resize"

workspace_layout default

# Keyboard
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%

#bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.config/sway/scripts/volume.sh inc
#bindsym XF86AudioLowerVolume exec --no-startup-id ~/.config/sway/scripts/volume.sh dec
#bindsym XF86AudioMute exec --no-startup-id ~/.config/sway/scripts/volume.sh mute
bindsym XF86_MonBrightnessUp exec --no-startup-id ~/.config/sway/scripts/brightness.sh -A
bindsym XF86_MonBrightnessDown exec --no-startup-id ~/.config/sway/scripts/brightness.sh -U

# Switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws1w

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Move your focus around
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

    # Move the focused window with the same, but add Shift
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Move focused workspace between monitors
#bindsym $mod+Ctrl+Right move workspace to output right
#bindsym $mod+Ctrl+Left move workspace to output left

mode "resize" {
    # These bindings trigger  shrink width 5 px or 5 ppt
    # bindsym Down resize grow height 5 px or 5 ppt
    # bindsym Up resize shrink height 5 px or 5 ppt
    # bindsym Right resize grow width 5 px or 5 ppt
    bindsym Left resize shrink width 25px
    bindsym Down resize grow height 25px
    bindsym Up resize shrink height 25px
    bindsym Right resize grow width 25px
    # Back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

